<p id="notice"><%= notice %></p>

<h1><%= @studio.name %></h1>
<p><%= @studio.feature %></p>

<div>
  <div class="left">
    <%= image_tag studio_image_studio_url(@studio), height: '240px' %>
  </div>
  <div>
    <p><%= @studio.area.prefecture %><%= @studio.area.city %><%= @studio.address %></p>
    <p>
      <%= "#{@studio.nearest_station_1}駅" -%>
      <%= ", #{@studio.nearest_station_2}駅" if @studio.nearest_station_2.present? -%>
      <%= ", #{@studio.nearest_station_3}駅" if @studio.nearest_station_3.present? -%>
    </p>
    <p>電話番号:<%= @studio.tel %></p>
    <p>営業時間:<%= "#{@studio.start_hours&.strftime("%H:%M")} - #{@studio.end_hours&.strftime("%H:%M")}" %></p>
    <p>
      <strong>深夜レンタル</strong>
      <%= @studio.late_night ? 'あり' : 'なし' %>
    </p>
    <p>
      <strong>更衣室</strong>
      <%= @studio.locker_room ? 'あり' : 'なし' %>
    </p>
    <p>
      <strong>駐車場</strong>
      <%= @studio.parking ? 'あり' : 'なし' %>
    </p>
    <p>
      <strong>キャンセル期限</strong>
      <%= @studio.cancell_deadline %>
    </p>
    <p>
      <strong>備考</strong>
      <%= @studio.remarks %>
    </p>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th align="center">スタジオ名</th>
      <th align="center">広さ(㎡)</th>
      <th align="center">最大人数</th>
    </tr>
  </thead>
  <tbody>
    <% @studio.rooms.displayed.order('capacity desc').each do |room| %>
    <tr>
      <td align="center"><%= room.name %></td>
      <td align="center"><%= room.size %></td>
      <td align="center"><%= room.capacity %></td>
    </tr>
  <% end %>
  </tbody>
</table> 

<p class="right">※最大人数は目安です。詳細は各スタジオにお問い合わせください。</p>

<%= link_to "#{@studio.name}のWEBサイトはこちら", @studio.url, class: "btn btn-info btn-lg btn-block", target: "_blank" %>
