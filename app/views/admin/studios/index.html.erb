<p id="notice"><%= notice %></p>

<h1>Studios</h1>

<%= link_to 'New Studio', new_admin_studio_path %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>スタジオ名</th>
      <th>エリア</th>
      <th>住所</th>
      <th>最寄り駅</th>
      <th>電話番号</th>
      <th>営業時間</th>
      <th>状態</th>
      <th>メモ</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @studios.each do |studio| %>
      <tr>
        <td><%= studio.id %></td>
        <td><%= studio.name %></td>
        <td><%= studio.area.city %></td>
        <td><%= studio.address %></td>
        <td><%= "#{studio.nearest_station_1}, #{studio.nearest_station_2}, #{studio.nearest_station_3}" %></td>
        <td><%= studio.tel %></td>
        <td><%= "#{studio.start_hours&.strftime("%H:%M")} - #{studio.end_hours&.strftime("%H:%M")}" %></td>
        <td><%= studio.status %></td>
        <td><%= studio.memo %></td>
        <!--
        <td><%= link_to 'Show', admin_studio_path(studio) %></td>
        -->
        <td><%= link_to 'Edit', edit_admin_studio_path(studio) %></td>
        <td><%= link_to 'Destroy', admin_studio_path(studio), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Studio', new_admin_studio_path %>

