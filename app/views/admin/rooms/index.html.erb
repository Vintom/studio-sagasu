<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<%= link_to 'New Room', new_admin_room_path %>

<table class="table table striped table-hover">
  <thead>
    <tr>
      <th>スタジオ名</th>
      <th>ルーム名</th>
      <th>広さ(㎡)</th>
      <th>人数</th>
      <th>料金</th>
      <th>状態</th>
      <th>メモ</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.studio.name %></td>
        <td><%= room.name %></td>
        <td><%= room.size %></td>
        <td><%= room.capacity %></td>
        <td><%= room.price %></td>
        <td><%= room.status %></td>
        <td><%= room.memo %></td>
        <!--
        <td><%= link_to 'Show', room %></td>
        -->
        <td><%= link_to 'Edit', edit_admin_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

