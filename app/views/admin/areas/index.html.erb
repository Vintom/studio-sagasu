<p id="notice"><%= notice %></p>

<h1>Admin Areas</h1>

<%= link_to 'New Area', new_admin_area_path %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>都道府県</th>
      <th>市区町村</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.id %></td>
        <td><%= area.prefecture %><td>
        <td><%= area.city %><td>
        <!--
        <td><%= link_to 'Show', admin_area_path(area) %></td>
        -->
        <td><%= link_to 'Edit', edit_admin_area_path(area) %></td>
        <td><%= link_to 'Destroy', admin_area_path(area), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

