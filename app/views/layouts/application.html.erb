<!DOCTYPE html>
<html>
  <head>
    <title>VStudio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render partial: 'shared/google_analytics' %>
  </head>

  <body>
    <nav class="navbar-fixed-top navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'vintom_studio', root_path, class: 'navbar-brand' %>
        </div>
    
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
          <%= form_tag studios_path, class: "navbar-form navbar-right", role: "search", method: :get do %>
            <div class="form-group">
              <% if params[:area].present? %>
                <%= select '', :area, Area.all.map{ |a| [a.city, a.id] }, {selected: params[:area]}, {class: 'form-control'} %>
              <% else %>
                <%= select '', :area, Area.all.map{ |a| [a.city, a.id] }, {prompt: 'エリア'}, {class: 'form-control'} %>
              <% end %>
            </div>
            &nbsp;
            <div class="form-group">
              <% if params[:people].present? %>
                <%= select '', :people, [['〜5人', 1], ['〜10人', 2], ['〜20人', 3], ['21人〜', 4]], {selected: params[:people]}, {class: 'form-control'} %>
              <% else %>
                <%= select '', :people, [['〜5人', 1], ['〜10人', 2], ['〜20人', 3], ['21人〜', 4]], {prompt: '人数'}, {class: 'form-control'} %>
              <% end %>
            </div>
            &nbsp;
            <%= button_tag '探す', class: 'btn btn-info', type: :submit %>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
    <div class="footer-copyright"><small>All Right Reserved. Vintom, Inc.</small></div>
  </body>
</html>
